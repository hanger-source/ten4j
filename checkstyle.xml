<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN" "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8" />
    <property name="fileExtensions" value="java, properties, xml" />
    <property name="severity" value="error" />

    <!-- Excludes all 'module-info.java' files. -->
    <excludeFilter file="module-info\.java" />

    <!-- Suppress the "MissingJavadocType" check for test classes -->
    <module name="SuppressWithNearbyCommentFilter">
        <property name="commentFormat" value="CHECKSTYLE:OFF:MissingJavadocType" />
        <property name="checkFormat" value="MissingJavadocType" />
        <property name="influenceFormat" value="^\s*@Test" />
    </module>

    <!-- Checks for whitespace -->
    <!-- See https://checkstyle.org/config_whitespace.html -->
    <module name="TreeWalker">
        <module name="FileContentsHolder" />
        <module name="JavadocMethod" />
        <module name="JavadocType" />
        <module name="JavadocVariable" />
        <module name="JavadocStyle" />
        <module name="EmptyBlock" />
        <module name="EmptyCatchBlock" />
        <module name="RedundantImport" />
        <module name="UnusedImports" />
        <module name="LineLength">
            <property name="max" value="120" />
            <property name="ignoreNPos" value="true" />
        </module>
        <module name="WhitespaceAfter">
            <property name="tokens" value="COMMA, SEMI, TYPE_EXTENSION_AND, ARRAY_DECLARATOR" />
        </module>
        <module name="ParenPad" />
        <module name="MethodParamPad" />
        <module name="NoWhitespaceBefore" />
        <module name="NoWhitespaceAfter" />
        <module name="GenericWhitespace" />
        <module name="MethodTypeParameterName" />
        <module name="OverloadMethodsDeclarationOrder" />
        <module name="CustomImportOrder">
            <property name="customImportOrderRules"
                value="STATIC###SPECIAL_IMPORTS###THIRD_PARTY_PACKAGE###LOCAL_CLASS_PACKAGE###STANDARD_JAVA_PACKAGE" />
            <property name="specialImportsRegExp" value="^io.netty|^org.msgpack|^com.fasterxml" />
            <property name="standardPackageRegExp" value="^java|^javax" />
            <property name="separateStaticImports" value="false" />
            <property name="sortImportsInGroupAlphabetically" value="true" />
        </module>

    </module>

    <module name="Header">
        <property name="headerFile" value="./checkstyle-header.txt" />
        <property name="fileExtensions" value="java" />
    </module>

</module>